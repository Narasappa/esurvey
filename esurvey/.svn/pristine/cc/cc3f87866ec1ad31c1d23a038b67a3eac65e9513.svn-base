<div class="page-header">
  <%= link_to new_survey_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Survey
  <% end %>
  <h3 class="text-info"><u><b>Scale Based surveys </b></u></h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr class="bg-info">
            <th>S.No</th>
            <th>Name</th>
            <!-- <th>Survey type</th> -->
            <th>Scale weightage</th>
            <!-- <th>Merit weightage</th> -->
            <th>Political party</th>
            <th>Number of Question</th>
      <!--       <th>Survey scale</th> -->
            <th>View</th>
             <th>Edit</th>
             <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @scale_based.each_with_index  do |survey,index| %>
         <tr>
             <td><%= index+1 %></td>
            <td><%= survey.name %></td>
            <!-- <td><%= survey.survey_type %></td> -->
            <td><%= survey.scale_weightage %></td>
            <td><%= survey.political_party.name %></td>
            <td><%= survey.questions.count %></td>
            <!-- <td><%= survey.survey_scale %></td> -->
            <td><%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, survey,:class=>"btn btn-sm btn-info"  %></td>
        <td><%= link_to '<i class="fa fa-pencil-square-o" aria-hidden="true"></i>'.html_safe,edit_survey_path(survey),:class=>"btn btn-sm btn-success" %></td>
        <td><%= link_to '<i class="fa fa-times" aria-hidden="true"></i>'.html_safe, survey,{ method: :delete, data: { confirm: 'Are you sure?' } ,:class=>"btn btn-sm btn-danger" }%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>


 <hr>

 <h3 class="text-info"><u><b>Merit Based surveys </b></u></h3>


