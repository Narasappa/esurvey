<div class='row'>
<div class="container">
<div class="panel panel-default">
 
      <div class="panel-heading"><h3  class="text-center"><b>SignIn</b></h3></div>
    <div class="panel-body">
  <section id="login">
      <div class="row">
          <div class="col-xs-12">
              <div class="form-wrap">
               
                <%= flash[:notice] unless flash[:notice].nil?%>
                   <%= form_tag(:action => 'login_attempt') do %>
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            <%= text_field_tag(:username_or_email,nil,{placeholder: 'Ur mail id or mobile number',class: "form-control"})%>
                        </div>
                        <div class="form-group">
                            <label for="key" class="sr-only">Password</label>
                         <%= password_field_tag(:login_password,nil,{placeholder: 'Password',class: "form-control"})%>
                         <span class="first"></span>
                        </div>
                        <div class="checkbox">
                            <span class="character-checkbox" onclick="showPassword()"></span>
                            <span class="label">Show password</span>
                        </div>

                        <div class="form-group">
                            <label for="key" class="sr-only"></label>

                        <%= submit_tag("Log In",class:"btn btn-custom btn-lg btn-primary") %>
                      </div>
                    <% end %>

 <p class="text-center"><%= link_to 'Forgot Password?',{:controller => "home",
            :action => "forgot_password"},{:class => "text-danger text-center"} %></p>
                 
                    
              </div>
        </div> <!-- /.col-xs-12 -->
      </div> <!-- /.row -->
    <!-- /.container -->
</section>
 </div>
<br>
<br>
<br>



<div  id="forgot-password" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myForgetModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">Ã—</span>
          <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title">Recovery password</h4>
      </div>
      <div class="modal-body">

        <%= form_tag '/home/forgot_password',:remote =>true do %>
        <p>Type your email account</p>
        <input type="email" name="recovery-email" id="recovery-email" class="form-control" autocomplete="off">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <%= submit_tag "Recovery" ,:class=>"btn btn-custom"%>
       
      </div>
      <% end %>
    </div> <!-- /.modal-content -->
  </div> <!-- /.modal-dialog -->
</div> <!-- /.modal -->


          
</div>
 </div>
 </div>
  
<script type="text/javascript">
  $(document).ready(function(){
/*code for password length starts*/
    $('#login_password').keyup(function(){
var len =$('#login_password').val().length;
$('.first').text(len);

if(len<1)
{
$('.first').text('');
$('.first').removeClass('red');
$('.first').removeClass('orange');
$('.first').removeClass('green');
}

else if(len<=4)
{
$('.first').text('weak');
$('.first').addClass('red');
$('.first').removeClass('orange');
$('.first').removeClass('green');

}

else if(len<=8)
{
$('.first').text('good');
$('.first').addClass('orange');
$('.first').removeClass('red');
$('.first').removeClass('green');

}

else
{
$('.first').text('strong');
$('.first').addClass('green');
$('.first').removeClass('red');
$('.first').removeClass('orange');


}




});
    /*code for password length end*/
   $("a#forget").click(function(){
       $("#forgot-password").modal("show");
   });
  });

</script>


